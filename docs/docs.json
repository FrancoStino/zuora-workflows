{
  "$schema": "https://mintlify.com/schema.json",
  "theme": "mint",
  "name": "Zuora Workflow",
  "description": "A comprehensive workflow management system for Zuora with synchronization, visualization, and monitoring capabilities",
  "colors": {
    "primary": "#0D9488",
    "dark": "#0D9488",
    "light": "#0D9488"
  },
  "logo": {
    "dark": "/images/logo-white.svg",
    "light": "/images/logo.svg"
  },
  "favicon": {
    "dark": "/images/favicon.ico",
    "light": "/images/favicon.ico"
  },
  "navbar": {
    "primary": {
      "type": "github",
      "href": "https://github.com/FrancoStino/zuora-workflows"
    }
  },
  "navigation": {
    "groups": [
      {
        "group": "Overview",
        "pages": [
          "index",
          "introduction"
        ]
      },
      {
        "group": "Getting started",
        "pages": [
          "getting-started/requirements",
          "getting-started/installation",
          "getting-started/configuration",
          "getting-started/first-use"
        ]
      },
      {
        "group": "Architecture",
        "pages": [
          "architecture/overview"
        ]
      },
      {
        "group": "Features",
        "pages": [
          "features/workflow-synchronization"
        ]
      },
      {
        "group": "Developer guide",
        "pages": [
          "developer/cli-commands",
          "developer/troubleshooting"
        ]
      },
      {
        "group": "API reference",
        "pages": [
          "api/zuora-service"
        ]
      }
    ]
  },
  "background": {
    "decoration": "gradient"
  },
  "search": {
    "prompt": "Search or ask"
  },
  "api": {
    "playground": {
      "display": "interactive"
    }
  },
  "appearance": {
    "default": "system"
  }
}
